<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
             xmlns:tools="http://schemas.android.com/tools"
             android:layout_width="match_parent"
             android:layout_height="match_parent"
             tools:context=".Fragments.ProfileFragment">

    <!-- TODO: Update blank fragment layout -->
    <LinearLayout
        android:layout_margin="16dp"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <LinearLayout
            android:background="@drawable/gradient_profile"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">
        <LinearLayout
            android:layout_margin="16dp"
            android:orientation="vertical"
            android:gravity="center"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <ImageView
                android:src="@drawable/iam"
                android:layout_margin="16dp"
                android:id="@+id/avatar"
                android:layout_width="100dp"
                android:layout_height="100dp"/>
        </LinearLayout>

        <LinearLayout
            android:gravity="end"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">
            <Button
                android:textColor="@android:color/white"
                android:background="#28C6C7"
                android:id="@+id/sign_out"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Sign Out"/>
        </LinearLayout>

        </LinearLayout>
        <LinearLayout
            android:layout_marginTop="20dp"
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <TextView
                android:layout_marginBottom="5dp"
                android:id="@+id/email_profile"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Email"
                android:textColor="@color/design_default_color_primary"
                android:textSize="10dp"/>
            <TextView
                android:textSize="16dp"
                android:layout_marginBottom="8dp"
                android:paddingBottom="8dp"
                android:background="@drawable/bottom_line"
                android:text="@string/app_name"
                android:id="@+id/email_profile_value"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                />
            <TextView
                android:layout_marginTop="8dp"
                android:layout_marginBottom="5dp"
                android:id="@+id/number_profile"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Number"
                android:textColor="@color/design_default_color_primary"
                android:textSize="10dp"/>
            <TextView
                android:textSize="16dp"
                android:layout_marginBottom="8dp"
                android:paddingBottom="8dp"
                android:background="@drawable/bottom_line"
                android:text="+7-747-456-33-70"
                android:id="@+id/number_profile_value"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"/>
            <TextView
                android:layout_marginTop="8dp"
                android:layout_marginBottom="5dp"
                android:id="@+id/name_profile"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Name"
                android:textColor="@color/design_default_color_primary"
                android:textSize="10dp"/>
            <TextView
                android:textSize="16dp"
                android:layout_marginBottom="8dp"
                android:paddingBottom="8dp"
                android:background="@drawable/bottom_line"
                android:text="Zhassulan Urazbayev"
                android:id="@+id/name_profile_value"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"/>
            <TextView
                android:layout_marginTop="8dp"
                android:layout_marginBottom="5dp"
                android:id="@+id/money_profile"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Money"
                android:textColor="@color/design_default_color_primary"
                android:textSize="10dp"/>
            <TextView
                android:textSize="16dp"
                android:layout_marginBottom="8dp"
                android:paddingBottom="8dp"
                android:background="@drawable/bottom_line"
                android:text="2000 KZT"
                android:id="@+id/money_profile_value"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"/>
        </LinearLayout>
    </LinearLayout>

</FrameLayout>